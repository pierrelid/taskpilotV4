<div class="border-bottom">
  <div class="container d-flex justify-content-between align-items-center py-3">
    <h5 class="font-weight-bold m-0">Workflows : <%= @workflows.count %></h5>
    <%= link_to "+ Ajouter un workflow", new_workflow_path, class: 'btn btn-primary' %>
  </div>
</div>



<div class="container mt-3">
  <table id="table" class="display table-minimal table-offers" style="width:100%">
    <thead>
      <tr>
        <th>Type</th>
        <th>Nom</th>
        <th>Téléphone</th>
        <th>Produit</th>
        <th>Qualification</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @workflows.each do |workflow| %>
      <tr data-list-id='<%= workflow.id %>'>
        <td><strong><%= link_to workflow.name, workflow_path(workflow) %></strong></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td  class="text-right text-action">
        <%= link_to "<i class='fas fa-pen-alt text-muted'></i>".html_safe, edit_quote_path(quote), class: "mr-2"  %>
        <%= link_to "<i class='fas fa-trash-alt text-muted'></i>".html_safe, quote_path(quote), method: :delete, class: "mr-2"  %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
