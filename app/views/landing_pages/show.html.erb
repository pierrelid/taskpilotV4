<div class="container vh-100 w-25 d-flex justify-content-center align-items-center text-center">
    <div>
    <h4 class="font-weight-bold my-3">Quel jour vous convient le mieux ?</h4>
        <div>
        <% @dates.each_with_index do |date, index| %>
        <span data-controller="radio-selector">
            <span index="<%= index %>" id="date_<%= index %>" data-target="radio-selector.option" class="radio-choice date-item" data-action="click->radio-selector#selectRadioOption"><%= date.strftime("%a %d %b") %></span>
        </span>
        <% end %>
        </div>
        <div class="mt-4 mb-3">
            <h4 class="font-weight-bold">A quelle heure ?</h4>
            <p>Dur√©e de 30 min</p>
        </div>
        <div>
        <% @hours.each_with_index do |hour, index| %>
        <span data-controller="radio-selector">
          <span index="<%= index %>" index="<%= index %>" id="hout_<%= index %>" data-target="radio-selector.option" class="radio-choice date-item" data-action="click->radio-selector#selectRadioOption"><%= hour %></span>
        </span>
        <% end %>
        </div>
        <div class="mt-3">
            <div class="bg-primary p-3 text-light font-weight-bold">Envoyer</div>
        </div>
    </div>
</div>

