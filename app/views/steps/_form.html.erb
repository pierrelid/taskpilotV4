<%= simple_form_for [@workflow, @step] do |f| %>
    <div data-controller="step"">
        <%= f.input :type, 
        as: :select, 
        collection: [["Email", "EmailStep"], ["Sms", "SmsStep"], ["Delay", "DelayStep"]], 
        label_method: :first, 
        value_method: :second, 
        input_html: { "data-action" => "change->step#kind", "data-target" => "step.kindOfStep"} 
        %>
        <%= f.input :title, wrapper_html: { "data-target" => "step.titleInput", class: "d-none" } %>
        <%= f.input :body, wrapper_html: { "data-target" => "step.bodyInput", class: "d-none" } %>
        <%= f.input :delay, wrapper_html: { "data-target" => "step.delayInput", class: "d-none" } %>
        <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>