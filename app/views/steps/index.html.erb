<div class="bg-secondary">
    <div class="container min-vh-100-min-nav">
        <div class="py-2" data-controller="drag" data-drag-url="/workflows/<%= @workflow.id %>/steps/:id/move">
            <% @steps.order(position: :asc).each do |step| %>
                <div data-id="<%= step.id %>">
                    <div class="card p-2 mt-2" >
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="m-0">
                                <%= display_icon(step) %>
                                <div class="mt-2">
                                <%= display_content(step) %>
                                </div>
                            </div>
                            <div>
                                <%= link_to "<i class='fas fa-pen-alt text-muted'></i>".html_safe, edit_workflow_step_path(@workflow, step), class: "m-0" %>
                                <%= link_to "<i class='fas fa-trash-alt text-muted ml-2'></i>".html_safe, workflow_step_path(@workflow, step), method: :delete, class: "m-0" %>
                            </div>
                        </div>
                    </div>
                    <div class="w-50 border-right mt-2" style="height:30px;"></div>
                </div>
            <% end %>
            <div class="card p-2 mt-2">
                <%= link_to new_workflow_step_path(@workflow) do %>
                    <div class="d-flex align-items-center justify-content-center">
                     <i class='fas fa-plus h5 m-0'></i> <h5 class="m-0 ml-2">Ajouter une action</h5>
                    </div>               
                <% end %>
            </div>
        </div>
    </div>
</div>





