<div class="bg-secondary">
<div class="container pt-4 min-vh-100-min-nav">
    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-white p-3">
                <h5><strong><%= @quote.full_name %></strong></h5>
                <p class="my-2"><%= @quote.email %></p>
                <p class="my-2"><%= @quote.phone %></p>
                <p class="my-2"><%= @quote.product.name %></p>
                <p class="my-2"><%= @quote.qualification.name %></p>
                <div><%= link_to "Modifier le lead", edit_quote_path(@quote), class: "btn btn-outline-primary mt-2" %></div>
            </div>
        </div>
        <div class="col-sm-6">
            <%  @quote.messages.order(created_at: :desc).each do |message| %>
                <div class="card bg-white p-3 mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <% if message.type == "EmailMessage" %>
                            <i class="fas fa-envelope h4"></i>
                        <% else %>
                            <i class="fas fa-sms h4"></i>
                        <% end %>
                        <p class="my-2"><%= message.created_at.strftime("le %d/%m/%Y Ã  %T") %></p>
                    </div>
                    <p class="my-2"><strong><%= message.title %></strong></p>
                    <p class="my-2"><%= message.body %></p>
                </div>
            <% end %>
        </div>
    </div>
</div>
</div>

