<div class="border-bottom">
  <div class="container d-flex justify-content-between align-items-center py-3">
    <h5 class="font-weight-bold m-0">Leads : <%= @quotes.count %></h5>
    <%= link_to "+ Ajouter un lead", new_quote_path, class: 'btn btn-primary' %>
  </div>
</div>




<div class="container mt-3">
  <table id="table" class="display table-minimal table-offers" style="width:100%">
    <thead>
      <tr>
        <th>Type</th>
        <th>Nom</th>
        <th>Nombre contacts</th>
        <th>Date de cr√©ation</th>
        <th class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @quotes.each do |quote| %>
      <tr data-list-id='<%= quote.id %>'>
        <td><strong><%= quote.full_name %></strong></td>
        <td><strong><%= quote.email %></strong></td>
        <td><strong><%= quote.phone %></strong></td>
        <td class='text-muted'><%= l(quote.created_at, format: :short) %></td>
        <td  class="text-right text-action">
          <%= link_to "Voir le lead", quote_path(quote)  %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
